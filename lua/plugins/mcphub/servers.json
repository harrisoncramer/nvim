{
  "mcpServers": {
    "figma-desktop": {
      "autoApprove": [],
      "disabled": false,
      "url": "http://127.0.0.1:3845/mcp"
    },
    "git": {
      "args": [
        "mcp-server-git",
        "--repository",
        "${REPOSITORY_PATH}"
      ],
      "autoApprove": [],
      "command": "uvx"
    },
    "github": {
      "headers": {
        "Authorization": "Bearer ${GITHUB_TOKEN}"
      },
      "url": "https://api.githubcopilot.com/mcp/"
    },
    "linear": {
      "autoApprove": [
        "get_attachment",
        "create_attachment",
        "delete_attachment",
        "list_comments",
        "create_comment",
        "list_cycles",
        "get_document",
        "list_documents",
        "create_document",
        "update_document",
        "extract_images",
        "get_issue",
        "list_issues",
        "create_issue",
        "update_issue",
        "list_issue_statuses",
        "get_issue_status",
        "list_issue_labels",
        "create_issue_label",
        "list_projects",
        "get_project",
        "create_project",
        "update_project",
        "list_project_labels",
        "list_milestones",
        "get_milestone",
        "create_milestone",
        "update_milestone",
        "list_teams",
        "get_team",
        "list_users",
        "get_user",
        "search_documentation",
        "list_initiatives",
        "get_initiative",
        "create_initiative",
        "update_initiative",
        "get_status_updates",
        "save_status_update",
