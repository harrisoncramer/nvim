{
  "if error": {
    "prefix": "IFE",
    "body": [
      "if err != nil {",
      "\treturn $2fmt.Errorf(\"${1:message}: %w\", err)",
      "}",
      "$3"
    ],
    "description": "if error, then return it"
  },
  "if connect error": {
    "prefix": "IFC",
    "body": [
      "return nil, e.NewConnectError(ctx, e.ConnectErrorDetails{",
      "\tCode:     ${1:connect.CodeUnimplemented},",
      "\tInternal: fmt.Errorf(\"${2:message}: %w\", err),",
      "\tExternal: ${3:e.DefaultExternalErrMsg},",
      "})",
      "$4"
    ],
    "description": "if error, then return connect error"
  },
  "if err and non-nil": {
    "prefix": "IFFE",
    "body": [
      "if err := $1; err != nil {",
      "\treturn $3 fmt.Errorf(\"$2: %w\", err)",
      "}"
    ]
  },
  "if ok": {
    "prefix": "IOK",
    "body": [
      "if !ok {",
      "\t$2",
      "}"
    ],
    "description": "if not ok"
  }
}
